{{#each recipes as |recipe|}}

<!-- {{> partial}} -->


 <!-- Developers, why are we using data-id and not just id? -->
 <div class="container-fluid col-sm-3 list">
  <h1 data-id="{{recipe.id}}" class="my-recipe"> <small>Name: {{recipe.name}}</small></h1>
  <ul data-id="{{recipe.id}}">
    <li>{{#if recipe.description}}
      {{recipe.description}}
    {{else}}
      No description provided.
    {{/if}}</li>
    <li class="handlebars-form-hidden-{{rating.id}}"><button class="view-recipe">View</button></li>
    <li class="handlebars-form-hidden-{{rating.id}}"><button class="remove-recipe">Remove</button></li>
  </ul>
</div>


{{/each}}
